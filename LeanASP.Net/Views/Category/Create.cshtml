@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Create Category</h2>
            <hr />
            <!-- Thông báo tất cả lỗi-->
            @*<div asp-validation-summary="All"></div>*@
            <!-- Name-->
            <div class="mb-3">
                <label asp-for="Name"> Name</label>
                <input asp-for="Name" class="form-control" />
                <!-- Hiển thị lỗi Name-->
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <!-- Display Order-->
            <div class="mb-3">
                <label asp-for="DisplayOrder"> Display Order</label>
                <input asp-for="DisplayOrder" class="form-control" />
                <!-- Hiển thị lỗi Display Order-->
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
        </div>
        <!--Function create-->
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <!--Function back-->
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
    </div>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}

